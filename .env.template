# ==============================================
# PetiChat Production Environment Variables
# Copy this file to .env or configure in Coolify
# ==============================================

# ------------------------------
# Database (PostgreSQL)
# ------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=petichat

# ------------------------------
# Redis
# ------------------------------
REDIS_PASSWORD=another_secure_password_here

# ------------------------------
# API Backend Configuration
# ------------------------------
# Port to listen on (internal container port)
API_PORT=3001

# Security Secrets (Generate new random strings for production)
# You can use `openssl rand -base64 32` to generate these
JWT_SECRET=CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_RANDOM_STRING

# AI Service Configuration
# Provider options: 'openai', 'anthropic', 'google', 'mock'
AI_PROVIDER=openai
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# CORS Settings
# The URL where your frontend will be hosted (e.g., https://app.petichat.com)
CORS_ORIGIN=https://seu-dominio-frontend.com

# ------------------------------
# Frontend Configuration (Build Time)
# ------------------------------
# IMPORTANT: This must be set in Coolify's "Build Environment Variables" section for the Web service.
# Point this to your backend URL (e.g., https://api.petichat.com)
VITE_API_URL=https://seu-dominio-backend.com
