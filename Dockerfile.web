# ================================
# Build Stage
# ================================
FROM node:20-alpine AS builder

RUN apk add --no-cache libc6-compat
WORKDIR /app

# Enable pnpm with fixed version for deterministic builds
RUN corepack enable && corepack prepare pnpm@9.15.4 --activate

# Copy workspace config files
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json ./
COPY packages/shared/package.json ./packages/shared/
COPY apps/api/package.json ./apps/api/
COPY apps/web/package.json ./apps/web/

# Debug output for troubleshooting
RUN echo "=== Build Environment ===" && \
    node -v && \
    corepack --version && \
    pnpm -v && \
    pnpm config get registry

# Configure network settings and install dependencies
RUN pnpm config set fetch-retries 5 && \
    pnpm config set fetch-retry-mintimeout 20000 && \
    pnpm config set fetch-retry-maxtimeout 120000 && \
    pnpm install --frozen-lockfile

# Copy source code
COPY packages/shared ./packages/shared
COPY apps/web ./apps/web
COPY tsconfig.json ./

# Build the project
# ARG VITE_API_URL can be passed during build if needed, 
# but usually for client-side apps the env vars must be present at build time
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

WORKDIR /app
RUN pnpm --filter @petichat/shared build
RUN pnpm --filter @petichat/web build

# ================================
# Production Stage
# ================================
FROM nginx:alpine AS runner

# Copy built files from builder
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

# Copy custom nginx config
COPY apps/web/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
