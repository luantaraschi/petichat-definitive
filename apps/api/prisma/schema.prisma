// ================================
// PetiChat Database Schema
// ================================
// This is the Prisma schema for PostgreSQL
// Run `pnpm db:migrate` to apply changes

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// User & Authentication
// ================================

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  role         UserRole @default(member)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  userLawFirms     UserLawFirm[]
  cases            Case[]
  documentVersions DocumentVersion[]
  aiLogs           AILog[]
  metricsEvents    MetricsEvent[]

  @@map("users")
}

enum UserRole {
  owner
  member
  admin
}

// ================================
// Law Firm (Multi-tenant)
// ================================

model LawFirm {
  id               String           @id @default(uuid())
  name             String
  cnpj             String?
  subscriptionPlan SubscriptionPlan @default(trial) @map("subscription_plan")
  createdAt        DateTime         @default(now()) @map("created_at")
  updatedAt        DateTime         @updatedAt @map("updated_at")

  // Relations
  userLawFirms  UserLawFirm[]
  cases         Case[]
  metricsEvents MetricsEvent[]

  @@map("law_firms")
}

enum SubscriptionPlan {
  trial
  basic
  pro
  enterprise
}

// ================================
// User <-> LawFirm Association
// ================================

model UserLawFirm {
  id        String          @id @default(uuid())
  userId    String          @map("user_id")
  lawFirmId String          @map("law_firm_id")
  role      UserLawFirmRole @default(member)
  createdAt DateTime        @default(now()) @map("created_at")

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  lawFirm LawFirm @relation(fields: [lawFirmId], references: [id], onDelete: Cascade)

  @@unique([userId, lawFirmId])
  @@map("user_law_firms")
}

enum UserLawFirmRole {
  owner
  admin
  member
}

// ================================
// Cases
// ================================

model Case {
  id               String     @id @default(uuid())
  lawFirmId        String     @map("law_firm_id")
  userId           String     @map("user_id")
  clientName       String     @map("client_name")
  caseType         String     @map("case_type")
  status           CaseStatus @default(draft)
  factsDescription String     @map("facts_description") @db.Text
  metadata         Json?      @default("{}")
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")

  // Relations
  lawFirm        LawFirm         @relation(fields: [lawFirmId], references: [id], onDelete: Cascade)
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  legalDocuments LegalDocument[]
  theses         Thesis[]

  @@index([lawFirmId])
  @@index([userId])
  @@map("cases")
}

enum CaseStatus {
  draft
  active
  archived
}

// ================================
// Legal Documents
// ================================

model LegalDocument {
  id           String         @id @default(uuid())
  caseId       String         @map("case_id")
  title        String
  documentType DocumentType   @map("document_type")
  status       DocumentStatus @default(draft)
  contentHtml  String         @map("content_html") @db.Text
  sections     Json?          @default("[]")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  // Relations
  case     Case              @relation(fields: [caseId], references: [id], onDelete: Cascade)
  versions DocumentVersion[]

  @@index([caseId])
  @@map("legal_documents")
}

enum DocumentType {
  petition
  contestation
  appeal
  motion
  brief
  contract
  other
}

enum DocumentStatus {
  draft
  completed
}

// ================================
// Document Versions (History)
// ================================

model DocumentVersion {
  id          String   @id @default(uuid())
  documentId  String   @map("document_id")
  contentHtml String   @map("content_html") @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  createdBy   String   @map("created_by")

  // Relations
  document LegalDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  user     User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@map("document_versions")
}

// ================================
// Theses (AI Generated)
// ================================

model Thesis {
  id         String         @id @default(uuid())
  caseId     String         @map("case_id")
  category   ThesisCategory
  title      String
  content    String         @db.Text
  selected   Boolean        @default(false)
  orderIndex Int            @default(0) @map("order_index")
  createdAt  DateTime       @default(now()) @map("created_at")

  // Relations
  case Case @relation(fields: [caseId], references: [id], onDelete: Cascade)

  @@index([caseId])
  @@map("theses")
}

enum ThesisCategory {
  preliminares
  merito
}

// ================================
// Jurisprudence (Legal Precedents)
// ================================

model Jurisprudence {
  id            String   @id @default(uuid())
  tribunal      String
  processNumber String   @map("process_number")
  decisionDate  DateTime @map("decision_date")
  summary       String   @db.Text
  fullText      String   @map("full_text") @db.Text
  externalLink  String?  @map("external_link")
  // embedding  Float[]  // Uncomment when using pgvector for RAG
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([tribunal])
  @@index([decisionDate])
  @@map("jurisprudences")
}

// ================================
// AI Usage Logs
// ================================

model AILog {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  actionType       String   @map("action_type")
  model            String
  promptTokens     Int      @default(0) @map("prompt_tokens")
  completionTokens Int      @default(0) @map("completion_tokens")
  createdAt        DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("ai_logs")
}

// ================================
// Metrics & Analytics Events
// ================================

model MetricsEvent {
  id        String   @id @default(uuid())
  lawFirmId String   @map("law_firm_id")
  userId    String   @map("user_id")
  eventType String   @map("event_type")
  metadata  Json?    @default("{}")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  lawFirm LawFirm @relation(fields: [lawFirmId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([lawFirmId])
  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@map("metrics_events")
}
