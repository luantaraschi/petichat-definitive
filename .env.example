# ===========================================
# PetiChat Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# Database (PostgreSQL with pgvector)
# ===========================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/petichat?schema=public"

# ===========================================
# Auth.js (NextAuth v5)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"

# ===========================================
# Redis (for BullMQ job queues)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# AI Providers (optional for MVP)
# ===========================================
OPENAI_API_KEY=""
GOOGLE_AI_API_KEY=""
ANTHROPIC_API_KEY=""

# Which provider to use: openai | google | anthropic
AI_PROVIDER="openai"

# ===========================================
# Storage (S3-compatible, optional)
# ===========================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="petichat-uploads"
S3_REGION="us-east-1"

# ===========================================
# Sentry (error tracking, optional)
# ===========================================
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="PetiChat"
NODE_ENV="development"

# ===========================================
# Feature Flags (optional)
# ===========================================
ENABLE_AI_FEATURES="true"
ENABLE_JURISPRUDENCE_SEARCH="true"

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# ===========================================
# Logging
# ===========================================
LOG_LEVEL="debug"
