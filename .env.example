# ================================
# PetiChat Environment Variables
# ================================
# Copy this file to .env and fill in the values

# ================================
# Database (PostgreSQL)
# ================================
# Supabase or any PostgreSQL-compatible database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/petichat?schema=public

# ================================
# Redis Cache
# ================================
# Upstash, Redis Cloud, or local Redis
# Format: redis://USER:PASSWORD@HOST:PORT
REDIS_URL=redis://localhost:6379

# ================================
# JWT Authentication
# ================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# AI Providers
# ================================
# OpenAI (required for default provider)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (optional - for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI (optional - for Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Default AI Provider: openai | anthropic | google
AI_PROVIDER=openai

# Default model for each provider
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-opus-20240229
GOOGLE_MODEL=gemini-pro

# ================================
# File Storage
# ================================
# Supabase Storage, AWS S3, or compatible
STORAGE_PROVIDER=supabase
STORAGE_BUCKET_NAME=documents
STORAGE_BUCKET_URL=https://your-project.supabase.co/storage/v1

# For S3-compatible storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_BUCKET_NAME=

# ================================
# Application Settings
# ================================
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for emails, redirects, etc.)
FRONTEND_URL=http://localhost:5173

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ================================
# Logging
# ================================
LOG_LEVEL=info

# ================================
# Feature Flags
# ================================
ENABLE_TRIAL_LIMITS=true
TRIAL_DOCUMENT_LIMIT=5
TRIAL_AI_CALLS_LIMIT=50
